{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020",
      "es6",
      "dom"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "pretty": true,
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "noEmit": false,
    "moduleResolution": "node",
    "module": "commonjs",
    "outDir": "./build"
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}